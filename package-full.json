{
    "name": "rsm-vscode",
    "displayName": "Rady computing environment for business analytics",
    "description": "VS Code extension for RSM MSBA business analytics computing environment",
    "version": "0.3.0",
    "publisher": "vnijs",
    "license": "MIT",
    "icon": "rsm-vscode.jpg",
    "repository": {
        "type": "git",
        "url": "https://github.com/vnijs/rsm-vscode"
    },
    "bugs": {
        "url": "https://github.com/vnijs/rsm-vscode/issues"
    },
    "homepage": "https://github.com/vnijs/rsm-vscode/blob/main/README.md",
    "keywords": [
        "docker",
        "containers",
        "development",
        "remote development",
        "rsm",
        "msba"
    ],
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Data Science",
        "Machine Learning"
    ],
    "activationEvents": [
        "onStartupFinished",
        "workspaceContains:**/*.code-workspace",
        "onCommand:rsm-vscode.startContainer",
        "onCommand:rsm-vscode.stopContainer",
        "onCommand:rsm-vscode.debugEnv"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "rsm-vscode.startContainer",
                "title": "RSM: Attach to container"
            },
            {
                "command": "rsm-vscode.stopContainer",
                "title": "RSM: Detach from container"
            },
            {
                "command": "rsm-vscode.dockerComposeUp",
                "title": "RSM: Start Docker container"
            },
            {
                "command": "rsm-vscode.dockerComposeDown",
                "title": "RSM: Stop Docker container"
            },
            {
                "command": "rsm-vscode.startRadiant",
                "title": "RSM: Start Radiant (radiant)"
            },
            {
                "command": "rsm-vscode.startGitGadget",
                "title": "RSM: Start GitGadget (gitgadget)"
            },
            {
                "command": "rsm-vscode.cleanPackages",
                "title": "RSM: Uninstall local R and Python packages (clean)"
            },
            {
                "command": "rsm-vscode.setupContainer",
                "title": "RSM: Setup rsm-msba computing environment (setup)"
            },
            {
                "command": "rsm-vscode.changeWorkspace",
                "title": "RSM: Change workspace folder"
            },
            {
                "command": "rsm-vscode.debugContainer",
                "title": "RSM: Debug container"
            },
            {
                "command": "rsm-vscode.setContainerVersion",
                "title": "RSM: Set container version"
            },
            {
                "command": "rsm-vscode.testFilePaths",
                "title": "RSM: Test file paths"
            },
            {
                "command": "rsm-vscode.checkContainerConflicts",
                "title": "RSM: Check container conflicts"
            },
            {
                "command": "rsm-vscode.updateContainer",
                "title": "RSM: Update docker image"
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "package": "cross-env NODE_NO_WARNINGS=1 vsce package",
        "publish": "cross-env NODE_NO_WARNINGS=1 vsce publish"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/node": "^20.11.16",
        "eslint": "^9.17.0",
        "typescript": "^5.3.3",
        "@vscode/vsce": "^3.2.1",
        "cross-env": "^7.0.3"
    },
    "dependencies": {
        "glob": "^10.3.10",
        "rimraf": "^5.0.5"
    },
    "capabilities": {
        "virtualWorkspaces": true,
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "extensionKind": ["ui"],
    "extensionDependencies": [
        "ms-vscode-remote.remote-containers",
        "ms-vscode-remote.vscode-remote-extensionpack"
    ],
    "enabledApiProposals": [
        "resolvers"
    ]
}